<%  @categories.each do |category|  %>
  <%#= category.name %>
  <% category.products.each do |p| %>
 <strong>Name:</strong>   
<div><%= p.name%></div>
<strong>Price:</strong>  
<div><%= p.price %></div>

<table>
  <%  p.images.in_groups_of(3).each do |image| %>
    <tr>
      <%image.each do |img|%>
        <% if img.try(:avatar).present? %>
          <td>
<%= link_to image_tag(img.avatar.url(:small),:style =>"width:300px;height:300px;" )%>
          </td>
          <td>&nbsp;</td>
          <td>&nbsp;</td>
          <td>&nbsp;</td>
        <%end%>
      <%end%>
    </tr>
  <% end %>
</table>

<% end %>
<% end %>
 
