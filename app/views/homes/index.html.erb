<h4>Welcome To Home Page</h4>
<%#= render :partial => "layouts/slider"%>
<% @products.each do |p| %>
<div class="col-sm-6 col-md-4">
	<div class="thumbnail">
		<% p.images.in_groups_of(3).each do |image| %>
		
		<%image.each do |img|%>
		<% if img.try(:avatar).present? && img.image_show? %>

		<a data-toggle="modal" data-target="#myModal_<%= p.id %>" 	 href="#">
			<%=image_tag img.avatar.url(:original),:class => "img-responsive col-lg-12"%>
		</a>


		<h5><%= p.name.capitalize %></h5>
		<hr />
		<h3><%= p.price %></h3>
		<%if p.discount? %><h4>offer </h4><h4><%= (p.discount) %>%</h4>
		
		<% end %>
		<hr />
		
	


		<div class="actions">
			<%= link_to "Add to Cart", line_items_path(:product_id => p), :method => :post,:class =>"fa fa-shopping-cart fa-lg" %>
		</div>
	</div>

	<table>
	</td>
	<!-- Modal -->
	<div class="modal fade" id="myModal_<%= p.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>

				</div>
				<div class="modal-body">
				</p>
				<p>
					<strong>Name:</strong>
					<%= p.name.capitalize %>
				</p>
				<p>
					<strong>Description:</strong>
					<%= p.description.capitalize %>
				</p>
				<p>
					<strong>Price:</strong>
					<%= p.price %>
				</p>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
			</div>
		</div>
	</div>
</div>
<td>&nbsp;</td>
<td>&nbsp;</td>
<td>&nbsp;</td>
<%end%>
<%end%>
</tr>
<% end %>
</table>
</div>	
<% end %>




















