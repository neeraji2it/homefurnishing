<article>
  <div class="container">
    <div class="box-product">
      <div class="row">
        <% if(params[:controller] == "homes" && params[:action] != "search") %>
          <!-- <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3 box-product-left"> -->
           <%#= render :partial => "right_cat_menus" %>
           <%#= render :partial => "right_featured_menus" %>
          <!-- </div> -->
        <% end %>

        <% if @products.present? %>
          <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div id="leftColumn" class="product-outer-box">
              <div class="row row-mrgn" >
                <% @products.each do |product| %>
                  <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 ">
                    <div class="box-productimg">
                      <a href="#" title="">
                        <%=link_to image_tag(product.images.present? ? (product.images.first.avatar.url(:small)) : "/assets/missing.png", height: "317px", width: "309px") %>
                      </a>
                      <div class="productimg-hover">
                        <ul>
                          <!-- <li><a href="#" title="" class="icon-zoom" data-toggle="modal" data-target="#myModal-<%= product.id %>" onclick="zoomer(<%= product.id %>);"></a></li> -->
                          <li><%= link_to '<i class="icon-open"></i>'.html_safe, single_product_home_path(product.id) %></li>
                        </ul>
                      </div>
                    </div>
                    <div class="box-content" style="margin-bottom: 20px;">
                      <h3>Rs. <%= product.price %></h3>
                      <h4><%= product.name.capitalize %></h4>
                      <% if product.discount? %>
                        <span class="circleSmall">
                          <%= product.discount%>%
                        </span>
                      <%end %>
                    </div>
                  </div>

                  <%#= render :partial => "popup_product_slider", locals: {:product => product} %>

                <% end %>
              </div>
              <div class="row">
                <div class="box-pagination responsive-pagination">
                  <span class="text-float-left">Items <%= @products.count%> total</span>
                  <span class="text-float-right"><%= will_paginate @products, renderer: BootstrapPagination::Rails %></span>
                </div>
              </div>

            </div>
          </div>
        <% else %>
          <h2>Comming Soon!!!!!</h2>
        <% end %>
      </div>
    </div>
    <nav>
    </nav>
  </div>
</article>
<style type="text/css">
  .row .row-mrgn{margin-right: -29px;}
</style>