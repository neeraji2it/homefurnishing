
<article>
  <div class="container">
    <div class="box-product">
      <div class="row">
        <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3 box-product-left">
          <div class="box-categories">
            <h4>Categories</h4>
            <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
              <% @categories.each do |category| %>
              <% if category.present? %>
              <% @cat_products = category.products %>
              <div class="panel panel-default">
                <div class="panel-heading" role="tab" id="headingOne">
                  <h2 class="panel-title">
                    <a class="collapsed accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapseOne-<%= category.id %>" aria-expanded="false" aria-controls="collapseOne" title="Bedroom">

                      <%= category.name.capitalize %>
                    </a>
                  </h2>
                </div>
                <% end %>
                <div id="collapseOne-<%= category.id %>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
                  <div class="panel-body">
                    <ul>
                      <%if @cat_products.present? %>
                      <% @cat_products.each do |product| %>
                      <li>
                        <%= link_to product.name.capitalize, single_product_home_path(product.id) %>
                      </li>
                      <% end %>
                      <%else%>
                      <li>
                        Coming Soon!!!!!
                      </li>
                      <%end %>
                    </ul>
                  </div>
                </div>
              </div>
              <% end %>
            </div>
          </div>
          <div class="box-categories box-featurE clearfix">
            <h4>Featured Products</h4>
            <ul class="list-product">
              <% if @featured.present? %>
              <% @featured.each do |product| %>
              <li>
                <div class="frow frow-product">
                  <div>
                 <%= link_to image_tag(product.images.present? ? (product.images.first.avatar.url) : "/assets/missing.png", height: "50px", width: "50px"),single_product_home_path(product.id) %>
                  </div>
                  <div>
                    <h5><%=link_to product.name, single_product_home_path(product.id)%></h5>
                    <h2><%= product.price %></h2>
              <br/>
                  </div>
                </div>
              </li>
              <% end %>
              <%else%>
              <li>
                Coming Soon!!!!!
              </li>
              <% end %>
            </ul>
          </div>
        </div>
        <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9">
          <div id="leftColumn" class="product-outer-box">
            <div class="row">
              <% @products.each do |product| %>
              <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                <div class="box-productimg">
                  <a href="#" title="">

                     <%=link_to image_tag(product.images.present? ? (product.images.first.avatar.url) : "/assets/missing.png", height: "200px", width: "222px") %>
               
                  </a>
                  <div class="productimg-hover">
                    <ul>
                      <li><a href="#" title="" class="icon-zoom" data-toggle="modal" data-target="#myModal-<%= product.id %>"></a></li>
                      <li><%= link_to '<i class="icon-open"></i>'.html_safe, single_product_home_path(product.id) %></li>
                    </ul>
                  </div>
                </div>
                <div class="box-content" style="margin-bottom: 20px;">
                  <h3>Rs. <%= product.price %></h3>
                  <h4><%= product.name.capitalize %></h4>
                  <% if product.discount? %>
                  <h5><%= product.discount%>% Off</h5>
                  <%end %>
                  <span class="circlE"><%= link_to "", line_items_path(:product_id => product.id), :method => :post %>
                  </span>
                </div>
              </div>
              <div class="modal fade modal-car" id="myModal-<%= product.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h6><%= product.name.capitalize %></h6>
                    <div class="modal-body">
                      <div class="product-img-box">
                        <%= link_to image_tag(product.images.present? ? (product.images.first.avatar.url) : "/assets/missing.png", height: "200px", width: "220px"),single_product_home_path(product.id) %>
                      </div>
                      <h4>Rs. <%= product.price %></h4>
                  <% if product.discount? %>
                  <h5><%= product.discount%>% Off</h5>
                  <%end %>
                  <%= product.description%>
                    </div>
                  </div>
                </div>
              </div>
              <% end %>
            </div>
            <div class="box-pagination">
              <span>Items <%= @products.count %> total</span>
            </div>
            <%= will_paginate(@products, renderer: BootstrapPagination::Rails ) %>
          </div>
        </div>
      </div>
    </div>
    <nav>
    </nav>
  </div>
</article>