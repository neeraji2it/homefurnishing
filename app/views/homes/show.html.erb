<%= render :partial => "layouts/slider"%>
<% @products.each do |p| %> 
<p>
  <strong>Name:</strong>
  <%= p.name.capitalize %>
</p>

<p>
  <strong>Description:</strong>
  <%= p.description.capitalize %>
</p>

<p>
  <strong>Price:</strong>
  <%= p.price %>
</p>
<p>
<strong>Category:</strong>
<%= p.category.name.capitalize %>
</p>

<table>
  <%  p.images.in_groups_of(3).each do |image| %>
    <tr>
      <%image.each do |img|%>
        <% if img.try(:avatar).present? %>
          <td>
            <%= image_tag img.avatar.url(:small),:style=>"width:300px;height:300px;" %>
          </td>
          <td>&nbsp;</td>
          <td>&nbsp;</td>
          <td>&nbsp;</td>
        <%end%>
      <%end%>
    </tr>
  <% end %>
</table>

 <% end %>