<article>	
  <div class="box-maincheckout">
    <div class="container">
      <div class="box-checkout">
        <div class="box-checkoutinform">
          <h4 class="bposi"><span class="step">Step 3</span> <span class="text-informationSpacing">Shipping Information</span></h4>
          <div class="box-mainnew">
            <div class="row">
              <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
                <div class="box-new">
                  <div class="box-contenT">
                    <h4>Billing Address</h4>
                    <%= render :partial => "confirm" %>	
                  </div>
                </div>
              </div>

               <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
                <div class="box-new">
                  <div class="box-contenT">
                  <h4>Shipping Address</h4>
                  <% if @order.same_as_billing? %>
                    <%= render :partial => "confirm" %> 
                  <% else %>
                    <%= render :partial => "shipping" %> 
                  <% end %>
                  </div>
                </div>
              </div>

              <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
                <div class="box-new">
                  <div class="box-contenT">
                    <p style="font-size: 22px;">
                      Delivery Method
                    </p>
                    <%= image_tag("cod1.jpg", height: "140px", width: "140px") %>
                    <br/>
                  </div>
                </div>

                <div class="box-new">
                  <div class="box-contenT">
                    <p>
                      <%= link_to "Confirm My Order", confirm_myorder_order_path, :class => "btn" %>
                    </p>  
                    <br/>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>	
      </div>
    </div>
  </div>	
</article>