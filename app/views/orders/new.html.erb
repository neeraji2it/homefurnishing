<script type="text/javascript">
  $(document).ready(function() {
    $('input[type="checkbox"]').click(function() {
      if ($(this).is(":checked")) {
        $("#shipping_address").hide();
      }
      else if ($(this).is(":not(:checked)")) {
        $("#shipping_address").show();
      }
    });
  });
</script>