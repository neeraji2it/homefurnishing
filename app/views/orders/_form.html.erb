 <%#= link_to 'Back', orders_path ,:class => "pull-right  btn btn-primary" %>

  <%= form_for @order do |f| %>
  <% if @order.errors.any? %>
  <div id="error_explanation">
    <h2>Following Field Are Can't Be Blank </h2>

    <ul>
      <% @order.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <div class="form-group">
    First Name<br>
    <%= f.text_field :first_name , autofocus: true, class: "form-control"%>
  </div>
  <div class="form-group">
    Last Name<br>
    <%= f.text_field :last_name , autofocus: true, class: "form-control"%>
  </div>
  <div class="form-group">
   Address<br>
    <%= f.text_area :address , autofocus: true, class: "form-control" %>
  </div>
  <div class="form-group">
   LandMark<br>
    <%= f.text_area :landmark , autofocus: true, class: "form-control"%>
  </div>
  <div class="form-group">
    Pincode<br>
    <%= f.text_field :pincode , autofocus: true, class: "form-control"%>
  </div>
  <div class="form-group">
    City<br>
    <%= f.text_field :city , autofocus: true, class: "form-control"%>
  </div>
  <div class="form-group">
    State<br>
    <%= f.text_field :state , autofocus: true, class: "form-control"%>
  </div>

  <div class="form-group">
    Phone<br>
    <%= f.text_field :phone , autofocus: true, class: "form-control"%>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn"%>
  </div>
  <% end %>
