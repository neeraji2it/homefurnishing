<div class="grid_4">
<%= form_tag user_orders_admin_orders_path, :method => 'get', :id => "orders_search" do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :id => nil %>
  </p>
<% end %>
<% unless @orders.empty? %>
    <div id="products"><%= render :partial => 'user_orders' %></div>
<script type="text/javascript">
$(function() {
  $("#orders th a, #orders .pagination a").live("click", function() {
    $.getScript(this.href);
    return false;
  });
  $("#orders_search input").keyup(function() {
    $.get($("#orders_search").attr("action"), $("#orders_search").serialize(), null, "script");
    return false;
  });
});
</script>
<% else %>
<p>Invalid Order Id </p>
<% end %>
</div>
