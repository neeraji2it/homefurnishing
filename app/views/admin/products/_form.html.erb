  <form role="form">
  <div class="col-md-6">
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.select(:category_id, Category.all.map {|c| [c.name, c.id]}, :prompt =>"Choose a Category") %>
  </div>
<div class="form-group">
    <%= f.label :product_Name %><br />
  
    <%= f.text_field :name, autofocus: true, class: "form-control", placeholder:"Product Name"%>
  </div>
  <div class="form-group  ">
     <%= f.label :Description %><br />
    <%= f.text_area :description,rows: 6, column: 5, autofocus: true, class: "form-control", placeholder: "Description" %>
  </div>
  <div class="form-group">
    <%= f.label :price %><br />
    <%= f.text_field :price ,autofocus: true, class: "form-control", placeholder: "price" %>
  </div>
  
  <div class="form-group">
  <%= f.label :Discount %><br />
  <%= f.text_field :discount,autofocus: true, class: "form-control", placeholder: "Discount" %>
  </div>

  <div class="form-group">
  <%= f.label :File_input %>
   <% f.fields_for :images do |image| %>
    <p>
      <%= image.label :avatar, "Image File" %>
      <div>
      <%= image.file_field :avatar %>
      <br/>
      <%= image.link_to_remove "Remove", :class =>"btn btn-sm btn-danger" %>
      </div>
      </p>
    <% end %>
    </div>
    
   <br/>
  <%= f.link_to_add "Images", :images, :class =>"btn btn-primary" %>
<br/>
<br/>
<div class="actions">
  <%= f.submit class: "btn btn-default"%>
</div>
</div>
</form>