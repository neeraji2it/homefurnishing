    <table class="table">
      <thead>
        <tr>
      <th>Name</th>
      <th>Description</th>
      <!-- <th>Image url</th> -->
      <th>Price</th>
      <th>Discount</th>
      <th></th>
      <th></th>
      <th></th>
        </tr>
      </thead>
      <tbody>
      <% @products.each do |product| %>
        <tr>
        <td><%= product.name.capitalize %></td>
        <td><%= product.description.capitalize %></td>
        <td><%= product.price %></td>
        <td><%= number_to_percentage(product.discount) %></td>
        
        <td><%= link_to 'Show', admin_product_path(product.id) %></td>
        <td><%= link_to 'Edit', edit_admin_product_path(product.id) %></td>
        <td><%= link_to 'Destroy', admin_product_path(product.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
         <% end %>
      </tbody>
    </table>
    <%= will_paginate(@products) %>


<!-- Button trigger modal -->
<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
  Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
