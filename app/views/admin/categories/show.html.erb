<div class="table-responsive">
<table class="table table-hover">

<%= link_to 'Back', admin_categories_path, :class => "pull-right  btn btn-primary" %>
<% unless !@category.nil? %>
  <thead>
    <tr>
      
      <th>Name</th>
      <th>Description</th>
      <!-- <th>Image url</th> -->
      <th>Price</th>
      <th></th>
      <th></th>
      <th></th>
      </tr>
  </thead>


  <tbody>
<% @category.products.each do |product| %>
   <tr>
   
    <td><%= product.name.capitalize %></td>
	  <td><%= product.description.capitalize %></td>
	  <td><%= product.price %></td>
  </tr>
  <% end %>

  </tbody>
</table>
</div>
<% else %>
<h3>No Product Belongs This Category </h3>
<%end %>
  


