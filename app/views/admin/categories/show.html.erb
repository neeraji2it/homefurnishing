

<% unless @categories.empty? %>


<%= form_tag admin_category_path, :method => 'get',:id => "categories_search" do %>

<p class="search">
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search", :name => nil,:class => "btn btn" %>
</p>


<% end %>

<div id="categories"><%= render 'show' %></div>

<script type="text/javascript">
  $(function () {
  // Sorting and pagination links.
  $('#categories th a, #categories .pagination a').live('click', function () {
    $.getScript(this.href);
    return false;
  });
  
  // Search form.
  $('#categories_search input').keyup(function() {
    $.get($("#categories_search").attr("action"), $("#categories_search").serialize(), null, 'script');
    return false;
  });
});
</script>
<% else %>
<h4>Category Bucket is empty</h4>
<% end %>
